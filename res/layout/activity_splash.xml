<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".SplashActivity"
     android:weightSum="30" >
   
    <RelativeLayout android:id="@+id/splashlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/animate"
        android:padding="30dp">
       
         
     
        <RelativeLayout android:id="@+id/logo_layout_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            
            >
            
        <ImageView android:id="@+id/reportedly_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_splash"
            android:layout_centerHorizontal="true"
            />
       <TextView android:id="@+id/logo_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportedly_image"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/home_text"
           
            android:textColor="#ffffff"/>
     
        <ImageButton android:id="@+id/getstart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/logo_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/get_strt_btn"
        />
          <Button android:id="@+id/go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/getstart_button"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Log in"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        
        />
        </RelativeLayout>
       
    </RelativeLayout>

</LinearLayout>