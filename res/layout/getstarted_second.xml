<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:weightSum="60"
    android:paddingLeft="40dp"
    android:paddingRight="40dp" >
<RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="25"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_getstarted__second"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/img_popup"
        android:gravity="center"
        android:layout_weight="14"
        android:padding="15dp" >

        <TextView
            android:id="@+id/top_textview_second_popup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create impactful reports"
            android:textColor="#000000"
            android:textStyle="bold" 
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/image_second_popup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_textview_second_popup"
            android:layout_marginTop="20dp"
            android:background="@drawable/second_splah" 
            android:layout_above="@+id/continue_second"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/continue_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/continue_btn" />
    </RelativeLayout>
       <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="21"></RelativeLayout>

</LinearLayout>