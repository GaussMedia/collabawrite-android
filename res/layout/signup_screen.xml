<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout
        android:id="@+id/signup_top_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg_with_logo" >

        <Button
            android:id="@+id/cancel_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cancel" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/logo_layout_onsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="@drawable/signup_bg"
        >

       
    </RelativeLayout>
     <LinearLayout
        android:id="@+id/signin_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_bg"
        android:gravity="center"
        android:weightSum="30"
        android:padding="25dp"
        android:orientation="vertical" >
        
             <LinearLayout
                    android:id="@+id/user_pass_signup"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="12"
                  >
                 
             </LinearLayout>
      
             <LinearLayout
                    android:id="@+id/user_pass_signup"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical" >

                   <EditText
                        android:id="@+id/fullname_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_top_bx"
                        android:hint="Fullname"
                        android:paddingLeft="5dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/formline_signup1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_box_line" />
                    <EditText
                        android:id="@+id/username_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field2"
                        android:hint="Username"
                        android:paddingLeft="5dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/formline_signup1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_box_line" />

                    <EditText
                        android:id="@+id/password_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field2"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:paddingLeft="5dp" />
                    <ImageView
                        android:id="@+id/formline_signup2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_box_line" />
                    
                    <EditText
                        android:id="@+id/email_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field2"
                        android:singleLine="true"
                        android:hint="Email"
                        android:paddingLeft="5dp" />
                    <ImageView
                        android:id="@+id/formline_signup2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_box_line" />
                    
                    <AutoCompleteTextView android:id="@+id/location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_bottom_bx"  
                        android:singleLine="true"
                        android:hint="Location"
                        android:paddingLeft="5dp"  />
                    
                    <Button android:id="@+id/signup_btn"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginTop="30dp"
                     android:background="@drawable/sign_up_btn"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/user_pass_signup"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="11.5"
                   
                  >
                 
             </LinearLayout>
      
        </LinearLayout>
</LinearLayout>