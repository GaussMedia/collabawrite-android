<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/collection_report_top_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg_with_logo" >

        <Button
            android:id="@+id/collection_report_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cancel" />
           <Button
            android:id="@+id/collection_report_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_btn" />

    </RelativeLayout>
    <RelativeLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg" 
        
        >
        <TextView 
            android:id="@+id/collection_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Collection Reports"
            android:textColor="#4E4E4E"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
</RelativeLayout>
<ListView android:id="@+id/collection_report_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:background="@drawable/main_bg"
    ></ListView>
</LinearLayout>